generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum InvestmentsStatus {
  PENDING
  DONE
  CANCELED
}

enum InvestmentsType {
  HOME
  SUBSCRIPTION
  PROFESSIONAL
  EDUCATION
  HEALTH_CARE
  TRANSPORT
  MARKET
  SHOPPING
  TRAVEL
  FOOD
  LEISURE
  GAMES
  BOOKS
  CLOTHES
  BILLS
  OTHERS
}

model Investments {
  id          Int               @id @default(autoincrement())
  description String
  value       Float
  date        DateTime
  status      InvestmentsStatus
  type        InvestmentsType
}
